import java.util.Scanner;
public class Pattern11 {

	public static void main(String[] args) {
		 Scanner sc=new Scanner(System.in);
		    int n=sc.nextInt();
		    System.out.println("enter the n value");
		    for(int i=0;i<=n-1;i++){
		        for(int j=0;j<=n-1;j++){
		            if(j==n/2||i-j==n/2||j+i==(n-1)+(n/2)){
		                System.out.print("* ");
		        }
		        else
		        {
		            System.out.print("  ");
		        }
		    }
			System.out.println();
		}

	}

}
